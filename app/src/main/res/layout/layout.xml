        <Button
            android:id="@+id/b1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"

            android:background="@drawable/buttonstyle2"
            android:text="修改信息"></Button>
<TextView
